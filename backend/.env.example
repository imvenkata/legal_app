# .env file for local development

# Server Configuration
PORT=8000
HOST=0.0.0.0
ENV=development

# Security
SECRET_KEY=your_secret_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB=legal_app

# AI Services
OPENAI_API_KEY=your_openai_api_key
GOOGLE_API_KEY=your_google_api_key

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# LLM Provider Configuration
# Options: "openai", "deepseek", "colpali"
LLM_PROVIDER=colpali
LLM_MODEL_NAME=google/colpali-3b

# Optional: Uncomment to specify device
# DEVICE=cpu

# LLM API Keys
DEEPSEEK_API_KEY=your_deepseek_api_key

# JWT Settings
JWT_SECRET=your_jwt_secret_here
JWT_ALGORITHM=HS256

# CORS Settings
CORS_ORIGINS=http://localhost:3000

# Service URLs
DOCUMENT_SERVICE_URL=http://localhost:8001
RESEARCH_SERVICE_URL=http://localhost:8002
CONTRACT_SERVICE_URL=http://localhost:8003

# PDF Processing Configuration
# Adjust DPI for clearer images but larger files/slower processing
PDF_CONVERSION_DPI=200 