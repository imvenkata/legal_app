# Frontend Environment Variables

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_DOCUMENT_SERVICE_URL=http://localhost:8001
NEXT_PUBLIC_RESEARCH_SERVICE_URL=http://localhost:8002
NEXT_PUBLIC_CONTRACT_SERVICE_URL=http://localhost:8003

# Authentication
NEXT_PUBLIC_AUTH_ENABLED=true
NEXT_PUBLIC_AUTH_PROVIDER=local # Options: local, google, github

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true

# UI Configuration
NEXT_PUBLIC_THEME=light # Options: light, dark, system
NEXT_PUBLIC_LANGUAGE=en # Default language

# File Upload
NEXT_PUBLIC_MAX_FILE_SIZE=10485760 # 10MB in bytes
NEXT_PUBLIC_ALLOWED_FILE_TYPES=pdf,doc,docx,txt

# Rate Limiting
NEXT_PUBLIC_API_RATE_LIMIT=60 # Requests per minute

# Environment
NODE_ENV=development

# App Configuration
REACT_APP_ENV=development
REACT_APP_VERSION=$npm_package_version 