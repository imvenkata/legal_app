# Document Service Environment Variables

# Server Configuration
PORT=8001
HOST=0.0.0.0
ENV=development

# Security
SECRET_KEY=your_secret_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB=legal_app_documents

# AI Services
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# LLM Provider Configuration
LLM_PROVIDER=openai # Options: openai, google
LLM_MODEL_NAME=gpt-4 # Options: gpt-4, gpt-3.5-turbo, gemini-pro

# JWT Settings
JWT_SECRET=your_jwt_secret_here
JWT_ALGORITHM=HS256

# Service URLs
BACKEND_SERVICE_URL=http://localhost:8000
RESEARCH_SERVICE_URL=http://localhost:8002
CONTRACT_SERVICE_URL=http://localhost:8003

# PDF Processing Configuration
PDF_CONVERSION_DPI=300 # Adjust based on quality needs

# Database configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/document_db

# Storage configuration
STORAGE_TYPE=local
STORAGE_PATH=uploads

# S3 configuration (used if STORAGE_TYPE=s3)
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=your_access_key
S3_SECRET_KEY=your_secret_key
S3_BUCKET_NAME=documents
S3_REGION=your_region
S3_SECURE=false

# Auth service integration
AUTH_SERVICE_URL=http://localhost:8001

# Service configuration
LOG_LEVEL=INFO

# LLM API Keys
DEEPSEEK_API_KEY=your_deepseek_api_key

# MongoDB configuration
MONGO_DB_NAME=document_service

# OpenAI API Key
OPENAI_API_KEY=your_openai_api_key 